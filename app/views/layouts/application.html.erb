<!DOCTYPE html>
<html lang="<%= SiteSetting.default_locale %>" class="<%= html_classes %>">
  <head>
    <meta charset="utf-8">
    <title><%= content_for?(:title) ? yield(:title) + ' - ' + SiteSetting.title : SiteSetting.title %></title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="<%= @description %>" name="description">
    <meta content="" name="author">

    <%= canonical_link_tag %>

    <link rel="icon" type="image/png" href="<%=SiteSetting.favicon_url%>">
    <link rel="apple-touch-icon" type="image/png" href="<%=SiteSetting.apple_touch_icon_url%>">
    <%= javascript_include_tag "preload_store" %>

    <%= javascript_include_tag "locales/#{I18n.locale}" %>
    <%= javascript_include_tag "application" %>
    <%- if staff? %>
      <%= javascript_include_tag "admin"%>
    <%- end %>

    <%= render :partial => "common/special_font_face" %>
    <%= render :partial => "common/discourse_stylesheet" %>

    <link href='http://fonts.googleapis.com/css?family=Roboto+Condensed:300,400,700&amp;subset=latin,latin-ext' rel='stylesheet' type='text/css'>

    <%= discourse_csrf_tags %>

    <%= yield :head %>
  </head>

  <body>
    <!--[if IE 9]><script type="text/javascript">ie = "new";</script><![endif]-->

    <div id="epaszport">
      <div class="epaszportContent">
          <div class="epaszportLogo">
              <h1>ePAŃSTWO</h1>
          </div>
          <div class="epaszportList">
              <nav class="hidden-xs">
                  <a href="http://mojePanstwo.pl" target="_blank">_mojePAŃSTWO</a>
                  <a href="http://epf.org.pl/api" target="_blank">API</a>
                  <a href="http://epf.org.pl/kodujdlapolski" target="_blank">KODUJ DLA POLSKI</a>
                  <a class="active" href="http://epf.org.pl" target="_blank">FUNDACJA ePAŃSTWO</a>
              </nav>
          </div>
      </div>
    </div>
    <div id="ePFheader">
        <div class="container">
            <div class="headline">
                <h3>
                    <a href="http://epf.org.pl/" target="_blank">
                        <img alt="Koduj dla Polski" class="logo" src="http://epf.org.pl/kodujdlapolski/img/logo.svg">
                    </a>
                </h3>

                <div class="line first">
                    <a href="http://epf.org.pl/" target="_blank">
                        <img alt="Fundacja ePaństwo" class="logo" src="http://epf.org.pl/img/logo.svg">
                    </a>
                </div>

                <div class="line">
                    <ul class="menu">
                        <li><a href="http://epf.org.pl/#council" target="_blank"><span data-hover="O&nbsp;NAS">O NAS</span></a></li>
                        <li><a href="http://epf.org.pl/#dane" target="_blank"><span data-hover="DANE">DANE</span></a></li>
                        <li><a href="http://epf.org.pl/#projects" target="_blank"><span data-hover="PROJEKTY">PROJEKTY</span></a></li>
                        <li><a href="http://epf.org.pl/#reports" target="_blank"><span data-hover="RAPORTY">RAPORTY</span></a></li>
                        <li><a href="http://epf.org.pl/#team" target="_blank"><span data-hover="ZESPÓŁ">ZESPÓŁ</span></a></li>
                        <li><a href="http://epf.org.pl/#newsRoom" target="_blank"><span data-hover="AKTUALNOŚCI">AKTUALNOŚCI</span></a>
                        </li>
                        <li><a href="http://epf.org.pl/#press" target="_blank"><span data-hover="PRASA&nbsp;O&nbsp;NAS">PRASA O NAS</span></a>
                        </li>
                        <li><a href="http://epf.org.pl/#contact" target="_blank"><span data-hover="KONTAKT">KONTAKT</span></a></li>
                        <li><a href="http://blog.epf.org.pl/" target="_blank"><span data-hover="BLOG">BLOG</span></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <%= SiteCustomization.custom_header(session[:preview_style], mobile_view? ? :mobile : :desktop) %>
    <section id='main'>
    </section>

    <% unless current_user %>
      <form id='hidden-login-form' method="post" action="<%=login_path%>" style="display: none;">
        <input name="username" type="text"     id="signin_username">
        <input name="password" type="password" id="signin_password">
        <input name="redirect" type="hidden">
        <input type="submit" id="signin-button" value="Log In">
      </form>
    <% end %>

    <%- if @preloaded.present? %>
      <script>
      <%- @preloaded.each do |key, json| %>
        PreloadStore.store("<%= key %>",<%= escape_unicode(json) %>);
      <% end %>
      </script>
    <%- end %>

    <%= yield :data %>

    <footer id='bottom'></footer>

    <%= render :partial => "common/discourse_javascript" %>
    <%= render_google_analytics_code %>

    <noscript data-path="<%= request.env['PATH_INFO'] %>">
      <header class="d-header">
        <div class="container">
          <div class="contents">
            <div class="row">
              <div class="title span13">
                <a href="/"><img src="<%=SiteSetting.logo_url%>" alt="<%=SiteSetting.title%>" id="site-logo"></a>
              </div>
            </div>
          </div>
        </div>
      </header>
      <div id="main-outlet" class="container">
        <!-- preload-content: -->
        <%= yield %>
        <!-- :preload-content -->
      </div>
    </noscript>
    <!-- Discourse Version: <%= Discourse::VERSION::STRING %> -->
    <!-- Git Version: <%= Discourse.git_version %> -->
  </body>
</html>